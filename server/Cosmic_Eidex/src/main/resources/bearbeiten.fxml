<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cosmic.eidex.gui.ControllerFX.BearbeitenController">
     <Label layoutX="205.0" layoutY="26.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Profil bearbeiten" />

    <VBox alignment="CENTER" layoutX="20.0" layoutY="148.0" spacing="15" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="148.0">
      <Label text="Neuer Nickname" />

        <TextField fx:id="nicknameFeld" maxWidth="300" promptText="Neuer Nickname" />
      <Label layoutX="246.0" layoutY="10.0" text="Neues Passwort" />

        <PasswordField fx:id="passwortFeld" maxWidth="300" promptText="Neues Passwort" />

        <HBox alignment="CENTER" spacing="10">
            <Button onAction="#handleZurueck" text="Zurück" />
            <Button onAction="#handleLoeschen" text="Profil löschen" />
            <Button onAction="#handleBestaetigen" text="Bestätigen" />
        </HBox>
    </VBox>
</AnchorPane>
